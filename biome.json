{
    "$schema": "https://biomejs.dev/schemas/2.3.13/schema.json",
    "assist": {
        "actions": {
            "source": {
                "organizeImports": "on",
                "useSortedAttributes": "on",
                "useSortedKeys": "on",
                "useSortedProperties": "on"
            }
        },
        "enabled": true
    },
    "files": {
        "ignoreUnknown": false,
        "includes": [
            "**/src/**/*",
            "**/.vscode/**/*",
            "**/index.html",
            "**/vite.config.ts",
            "!**/src/routeTree.gen.ts",
            "!**/src/styles.css"
        ]
    },
    "formatter": {
        "attributePosition": "auto",
        "bracketSpacing": true,
        "enabled": true,
        "expand": "auto",
        "indentStyle": "space",
        "indentWidth": 4,
        "lineEnding": "lf",
        "lineWidth": 120
    },
    "javascript": {
        "formatter": {
            "arrowParentheses": "asNeeded",
            "bracketSameLine": false,
            "enabled": true,
            "jsxQuoteStyle": "double",
            "operatorLinebreak": "before",
            "quoteStyle": "double",
            "semicolons": "always",
            "trailingCommas": "all"
        }
    },
    "linter": {
        "enabled": true,
        "rules": {
            "complexity": {
                "noForEach": "error"
            },
            "correctness": {
                "noNestedComponentDefinitions": "error",
                "noReactPropAssignments": "error"
            },
            "performance": {
                "noBarrelFile": "error",
                "noReExportAll": "error"
            },
            "recommended": true,
            "style": {
                "noCommonJs": "error",
                "noDoneCallback": "error",
                "noEnum": "error",
                "noNamespace": "error",
                "noNegationElse": "error",
                "noSubstr": "error",
                "noUnusedTemplateLiteral": "error",
                "noUselessElse": "error"
            }
        }
    },
    "vcs": {
        "clientKind": "git",
        "enabled": false,
        "useIgnoreFile": false
    }
}
